{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@model/*": ["src/model/*"],
      "@services/*": ["src/services/*"],
      "@router/*": ["src/router/*"],
      "@strategy": ["src/strategy/index"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
